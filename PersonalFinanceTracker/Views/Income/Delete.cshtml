@model PersonalFinanceTracker.Models.Income

@{
    ViewData["Title"] = "Delete Income";
}

<h2>Delete Income</h2>

<div>
    <h4>Are you sure you want to delete this income?</h4>
    <dl class="row">
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
